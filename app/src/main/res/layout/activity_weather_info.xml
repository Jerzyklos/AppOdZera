<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_stations"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/station_selection_image"
        android:text="@string/current_station"
        android:onClick="ShowStations"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_stations"
        android:layout_above="@+id/update_info">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/imageView_time"
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:src="@drawable/time" />
            <TextView
                android:id="@+id/weather_data_utc_time"
                android:layout_width="match_parent"
                android:layout_height="130px"
                android:layout_column="1"
                android:text="@string/weather_data_utc_time"
                android:textAlignment="center"
                android:textSize="80px" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView_temp"
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:src="@drawable/temp" />
            <TextView
                android:id="@+id/weather_data_temp"
                android:layout_height="130px"
                android:layout_width="match_parent"
                android:text="@string/weather_data_temp"
                android:textSize="80px"
                android:textAlignment="center"
                android:layout_column="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/imageView_dew_temp"
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:src="@drawable/temp_dew"/>
            <TextView
                android:id="@+id/weather_data_dew_temp"
                android:layout_height="130px"
                android:layout_width="match_parent"
                android:text="@string/weather_data_dew_temp"
                android:textSize="80px"
                android:textAlignment="center"
                android:layout_column="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/imageView_wind"
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:src="@drawable/wind"/>
            <TextView
                android:id="@+id/weather_data_wind"
                android:layout_height="130px"
                android:layout_width="match_parent"
                android:text="@string/weather_data_wind"
                android:textSize="80px"
                android:textAlignment="center"
                android:layout_column="1"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/update_info"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentBottom="true"
        android:text="@string/update_weather_data"
        android:onClick="DownloadWeatherData"
        android:drawableLeft="@drawable/update"
        />

</RelativeLayout>
